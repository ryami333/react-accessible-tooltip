{
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "plugin:react/recommended",
        "plugin:flowtype/recommended",
        "prettier",
        "prettier/flowtype",
        "prettier/react"
    ],
    "plugins": [
        "react",
        "flowtype",
        "flowtype-errors",
        "jest",
        "prettier"
    ],
    "rules": {
        "flowtype-errors/show-errors": 2,
        "react/jsx-filename-extension": ["off", { "extensions": [".js", ".jsx"] }],
        "prettier/prettier": "error"
    },
    "env": {
        "es6": true,
        "browser": true,
        "jest": true
    }
}
